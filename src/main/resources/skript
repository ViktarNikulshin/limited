// проверка необходимости отправки заявки на утверждение руководителю
def needConfirmation = false;

if (requestApprovedByHead.properties['salary'][0].value != currentRequest.properties['salary'][0].value) {
   return true;
}

if (requestApprovedByHead.properties['minessp'].id != currentRequest.properties['minessp'].id) {
   return true;
}

if (requestApprovedByHead.properties['applicantPosition'] && !currentRequest.properties['applicantPosition']) {
   return true;
} else if (!requestApprovedByHead.properties['applicantPosition'] && currentRequest.properties['applicantPosition']) {
   return true;
}  else if (requestApprovedByHead.properties['applicantPosition'] && currentRequest.properties['applicantPosition']) {
   if (requestApprovedByHead.properties['applicantPosition'][0].value != currentRequest.properties['applicantPosition'][0].value) {
     return true;
   }
}

if (requestApprovedByHead.properties['openReason'][0].value != currentRequest.properties['openReason'][0].value) {
  return true;
}
if (requestApprovedByHead.properties['openReason'][0].value == 'replace') {
      if (requestApprovedByHead.properties['replacementReason'][0].value != currentRequest.properties['replacementReason'][0].value) {
       return true;
      }
     if (requestApprovedByHead.properties['replacementName'][0].value != currentRequest.properties['replacementName'][0].value) {
       return true;
      }
}
if (requestApprovedByHead.properties['openReason'][0].value == 'parentalLeave') {
       if (requestApprovedByHead.properties['replacementName'][0].value != currentRequest.properties['replacementName'][0].value) {
        return true;
      }
}
if (requestApprovedByHead.properties['openReason'][0].value == 'postReason2') {
     if (requestApprovedByHead.properties['program'] != currentRequest.properties['program']) {
        return true;
      }
       if (requestApprovedByHead.properties['project'] != currentRequest.properties['project']) {
        return true;
      }
}
if (requestApprovedByHead.properties['PersNadbavka'] != currentRequest.properties['PersNadbavka']) {
    return true;
}

return needConfirmation;